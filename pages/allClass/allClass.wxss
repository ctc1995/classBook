/* pages/allClass/allClass.wxss */
.page_all_class{
    border-top: 1px solid #eaeaea;
}
.first_class{
  font-size: 32rpx;
  background-color: #eaeaea;
  margin-bottom: 35rpx;
  padding: 20rpx 36rpx;
  border-bottom: 1px solid #ccc;
}
.second_class{
  padding: 0 36rpx;
}
/* 书单 */
.mod_book_list{
  border-bottom: 1px solid #ccc;
  padding-bottom: 22rpx;
}
.mod_book_list .list{
    color: #999;
    font-size: 26rpx;
    display: flex;
    flex-wrap: wrap;
}
.mod_book_list .item{
    width: 212rpx;
    padding: 10rpx 0;
    margin-bottom: 30rpx;
    border-radius: 20rpx;
    text-align: center;
    background-color: #f3f3f3;
}
.mod_book_list .item:nth-child(3n+2), .mod_book_list .item:nth-child(3n+3){
  margin-left: 21rpx;
}