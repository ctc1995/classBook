/* pages/inviteImg/inviteImg.wxss */
.invite_img {
  width: 750rpx;
  height: 100vh;
  background-color: #efefef;
  padding-top: 80rpx;
  display: flex;
  justify-content: center;
}
.invite_img .img_card{
  width: 600rpx;
  height: 65vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  background-color: #fff;
  border-radius: 18rpx;
  box-shadow: 0px 0px 5px #ddd;
  padding: 50rpx 30rpx;
}
.invite_img .img_card .ava{
  width: 150rpx;
  height: 150rpx;
  max-width: 150rpx;
  max-height: 150rpx;
  border-radius: 50%;
  border: 1px solid rgb(250,247,239);
  overflow: hidden;
  margin: 50rpx 0;
}
.invite_img .slogan {
  margin-bottom: 20rpx;
}
.invite_img .mini_code {
  width: 350rpx;
  height: 350rpx;
  margin-top: 30rpx;
}
.invite_img .tips {
  margin-top: 70rpx;
}