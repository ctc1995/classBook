/* 书单 */
.mod_book_list+.mod_book_list{
    margin-top: 36rpx;
}
.mod_book_list .list{
    color: #999;
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.mod_book_list .item{
    width: 212rpx;
    padding: 10rpx 0;
    margin-bottom: 30rpx;
    border-radius: 20rpx;
    text-align: center;
    background-color: #f3f3f3;
}