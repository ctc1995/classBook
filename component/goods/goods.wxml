<!--component/goods/goods.wxml-->
<section class="book_item" wx:for="{{goods}}" wx:key="{{index}}">
  <navigator class="book_content" url="../goods/goods?bookId={{item.id || item.good_id}}">
    <image src="http://dianshu.chaoshang666.com{{item.images}}"></image>
    <section class="book_detail">
      <section class="book_info">
        <p class="book_title">{{item.title}}</p>
        <p class="book_auth" wx:if="{{item.author}}">{{item.author}}</p>
        <p class="book_rate" wx:if="{{item.rate}}">豆瓣评分：{{item.rate}}</p>
        <p class="book_rate" wx:if="{{!item.rate && item.qualit}}">成色：{{item.quality}}</p>
      </section>
      <p class="book_price">
        <span class="price_unit">￥</span>
        <span class="real_price">{{item.price}}</span>
        <span>/</span>
        <span class="price">{{item.original_price}}</span>
      </p>
    </section>
  </navigator>
  <section class="add_car" bindtap="addShopCar" data-book="{{item}}"  wx:if="{{car}}">
    <image src="../../assets/images/add-car2x.png" />
  </section>
</section>