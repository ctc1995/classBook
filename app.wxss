/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 36rpx;
  box-sizing: border-box;
}

h2.title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.title .more {
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: unset;
  padding: 0 13rpx;
  border: 1px solid #999;
  border-radius: 20rpx;
}
.disabled {
  display: none !important;
}
/* 分割线 */
.line{
  width: 750rpx;
  height: 16rpx;
  background-color: rgb(243,243,243);
  margin-left: -36rpx;
  display: block;
}
.need_link_icon{
  position: relative;
}
.need_link_icon::after{
    content: " ";
    width: 15rpx;
    height: 26rpx;
    background-image: url(data:image/png;base64,);
    background-size: cover;
    position: absolute;
    right: 0;
}
/* 搜索 */
.mod_search {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}

.searchItem {
  display: flex;
  flex-direction: row;
  position: relative;
}

.searchItem image {
  height: 30rpx;
  width: 30rpx;
  align-self: center;
  position: absolute;
  left: 18rpx;
}

.searchItem input {
  width: 616rpx;
  flex: 1;
  padding-left: 62rpx;
  border-radius: 50rpx;
  border: 1px solid #dedede;
  background-color: #f5f5f5;
}

.book_price {
  position: relative;
}

/*主容器*/

.stepper {
  width: 180rpx;
  height: 54rpx;
  border: 1px solid #ccc;
  border-radius: 3px;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}

/*加号和减号*/

.stepper .oprate {
  float: left;
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ccc;
  display: inline-block;
}

/*数值*/

.stepper input {
  display: inline-block;
  width: 38px;
  height: 50rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  color: #333;
}

/* 好书推荐 */
.mod_good .book_list {
  width: 678rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
}

.mod_good .book_list .book_item {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
}

.mod_good .book_list .book_item+.book_item {
  padding-top: 30rpx;
  border-top: 1px solid #eaeaea;
}

.mod_good .book_list .book_item .book_content {
  width: 636rpx;
  display: flex;
}

.mod_good .book_list .book_item .book_content image {
  width: 152rpx;
  height: 196rpx;
  max-width: 152rpx;
  max-height: 196rpx;
  margin-right: 26rpx;
}

.mod_good .book_list .book_item .book_content .book_detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mod_good .book_list .book_item .book_content .book_detail .book_info {
  width: 458rpx;
  display: flex;
  flex-direction: column;
}

.mod_good .book_list .book_item .book_content .book_detail .book_info .book_title {
  width: 458rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden; /*超出部分隐藏*/
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  white-space: nowrap; /*规定段落中的文本不进行换行 */
}

.mod_good .book_list .book_item .book_content .book_detail .book_info p+p {
  margin-top: 15rpx;
}

.mod_good .book_list .book_item .book_content .book_detail .book_price .price_unit {
  font-size: 20rpx;
  color: #e50101;
}
.mod_good .book_list .book_item .book_content .book_detail .book_price .price{
    text-decoration:line-through;margin-left: 5rpx
}
.mod_good .book_list .book_item .book_content .book_detail .book_price .real_price {
  font-size: 32rpx;
  color: #e50101;
}

.mod_good .book_list .book_item .add_car {
  width: 42rpx;
}

.mod_good .book_list .book_item .add_car image {
  width: 42rpx;
  height: 37rpx;
}