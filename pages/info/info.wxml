<!--pages/info/info.wxml-->
<view class="page_info">

  <mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
  <mp-form id="form" models="{{formData}}">
    <mp-cells>
      <mp-cell prop="ava" title="头像" ext-class="weui-cell_ava">
        <image slot="footer" class="weui-ava-img" src="../../assets/images/ava.png" mode="aspectFit"></image>
      </mp-cell>
      <mp-cell prop="id" title="ID" ext-class="">
        <input data-field="id" class="weui-input" disabled="true" />
      </mp-cell>
      <mp-cell prop="name" title="昵称" ext-class="">
        <input bindinput="formInputChange" data-field="name" class="weui-input" placeholder="请输入昵称" />
      </mp-cell>
      <mp-cell prop="intro" title="简介" ext-class="">
        <input bindinput="formInputChange" data-field="intro" class="weui-input" placeholder="请输入简介" />
      </mp-cell>
      <mp-cell prop="date" title="生日" ext-class="">
        <picker data-field="date" mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="weui-input">{{date}}</view>
        </picker>
      </mp-cell>
     <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">性别</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindSexChange" value="{{sexIndex}}" range="{{sex}}">
            <view class="weui-input">{{sex[sexIndex]}}</view>
          </picker>
        </view>
      </view>
     <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">地区</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
            <view class="weui-input">
              {{region[0]}} {{region[1]}} {{region[2]}}
            </view>
          </picker>
        </view>
      </view>
      <mp-cell prop="mobile" title="手机号" ext-class=" weui-cell_vcode">
        <input bindinput="formInputChange" data-field="mobile" class="weui-input" placeholder="请输入手机号" />
        <view slot="footer" class="weui-vcode-btn" bindtap="getCode">获取验证码</view>
      </mp-cell>
    </mp-cells>
  </mp-form>
  <view class="weui-btn-area">
      <button class="btn btn_primary" style="height:80rpx;line-height:80rpx;font-size:30rpx; border-radius:80rpx;" bindtap="submitForm">保存修改</button>
  </view>
</view>