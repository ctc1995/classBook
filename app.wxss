/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 36rpx;
  box-sizing: border-box;
}

h2.title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.title .more {
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: unset;
  padding: 0 13rpx;
  border: 1px solid #999;
  border-radius: 20rpx;
}
.disabled {
  display: none !important;
}
/* 分割线 */
.line{
  width: 750rpx;
  height: 16rpx;
  background-color: rgb(243,243,243);
  margin-left: -36rpx;
  display: block;
}
.need_link_icon{
  position: relative;
}
.need_link_icon::after{
    content: " ";
    width: 15rpx;
    height: 26rpx;
    background-image: url(data:image/png;base64,);
    background-size: cover;
    position: absolute;
    right: 0;
}

/* 搜索 */
.mod_search {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}

.searchItem {
  display: flex;
  flex-direction: row;
  position: relative;
}

.searchItem image {
  height: 30rpx;
  width: 30rpx;
  align-self: center;
  position: absolute;
  left: 18rpx;
}

.searchItem input {
  width: 616rpx;
  flex: 1;
  padding-left: 62rpx;
  border-radius: 50rpx;
  border: 1px solid #dedede;
  background-color: #f5f5f5;
}

.book_price {
  position: relative;
}

/* 轮播图 */
.mod_swiper{
  max-height: 238rpx;
  margin-bottom: 54rpx;
  position: relative;
}
.swiper-item{
  border-radius: 15rpx;
  z-index: 0;
}
.swiper-item image{
  width: 678rpx;
  height: 238rpx;
  max-width: 678rpx;
  max-height: 238rpx;
}
/* 自定义轮播图指示点样式 */
.mod_swiper .dots{
  width: 678rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: absolute;
  bottom: 10rpx;
}
/* 未选中时的小圆点样式 */
.mod_swiper .dot{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: rgba(51,51,51,.5);
}
.mod_swiper .dot+.dot{margin-left: 20rpx;}
/* 选中以后的小圆点样式 */
.mod_swiper .active{
  background-color: #fff;
} 

/*主容器*/

.stepper {
  width: 180rpx;
  height: 54rpx;
  border: 1px solid #ccc;
  border-radius: 3px;
  position: absolute;
  right: 10rpx;
  bottom: 0;
}

/*加号和减号*/

.stepper .oprate {
  float: left;
  width: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ccc;
  display: inline-block;
}

/*数值*/

.stepper input {
  display: inline-block;
  width: 38px;
  height: 50rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  color: #333;
}

/* 好书推荐 */
.mod_good .book_list {
  width: 678rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
}

.mod_good .book_list .book_item {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
}

.mod_good .book_list .book_item+.book_item {
  padding-top: 30rpx;
  border-top: 1px solid #eaeaea;
}

.mod_good .book_list .book_item .book_content {
  width: 636rpx;
  display: flex;
}

.mod_good .book_list .book_item .book_content image {
  width: 152rpx;
  height: 196rpx;
  max-width: 152rpx;
  max-height: 196rpx;
  margin-right: 26rpx;
}

.mod_good .book_list .book_item .book_content .book_detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mod_good .book_list .book_item .book_content .book_detail .book_info {
  width: 458rpx;
  display: flex;
  flex-direction: column;
}

.mod_good .book_list .book_item .book_content .book_detail .book_info .book_title {
  width: 458rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden; /*超出部分隐藏*/
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  white-space: nowrap; /*规定段落中的文本不进行换行 */
}

.mod_good .book_list .book_item .book_content .book_detail .book_info p+p {
  margin-top: 15rpx;
}

.mod_good .book_list .book_item .book_content .book_detail .book_price .price_unit {
  font-size: 20rpx;
  color: #e50101;
}
.mod_good .book_list .book_item .book_content .book_detail .book_price .price{
    text-decoration:line-through;margin-left: 5rpx
}
.mod_good .book_list .book_item .book_content .book_detail .book_price .real_price {
  font-size: 32rpx;
  color: #e50101;
}

.mod_good .book_list .book_item .add_car {
  width: 42rpx;
}

.mod_good .book_list .book_item .add_car image {
  width: 42rpx;
  height: 37rpx;
}
.btn{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  margin: 0;
}
.btn_default {
  background-color: transparent;
  color: #999999;
  border: 1px solid #999999;
}
.btn_primary {
  background-color: #f4b800;
  color: #fff;
}
/* 订单页收货地址样式 */
.order_delivery{
  width: 750rpx;
  min-height: 138rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx 70rpx 30rpx 38rpx;
  box-sizing: border-box;
}
.order_delivery .name_phone{
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.order_delivery .name_phone span+span{
  margin-left: 20rpx;
}
.order_delivery .address{
  color: #999;
  font-size: 24rpx;
  word-break: break-all;
}

.line_title{
  color: #333;
  font-size: 24rpx;
}
.order_status{
	background-color: #999999;
}
.order_status.status_primary{
	background-color: #f4b800;
}

/* uploader */
.ui_uploader_cell {
    width: 100%;
    padding: 40rpx 0;
    box-sizing: border-box;
}
.ui_uploader_item{
    position: relative;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    width: 200rpx;
    height: 200rpx;
}
.ui_uploader {
    position: relative;
    margin-right: 25rpx;
    margin-bottom: 25rpx;
    width: 200rpx;
    height: 200rpx;
    border: 2rpx solid #d9d9d9;
    box-sizing: border-box;
}

.ui_uploader:before {
    content: " ";
    position: absolute;
    width: 4rpx;
    height: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}

.ui_uploader:after {
    content: " ";
    position: absolute;
    height: 4rpx;
    width: 79rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.ui_uploader_item_icon{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    background: #fff;
    border-radius: 50%;
}
.ui_uploader_item image {
    width: 100%;
    height: 100%;
}