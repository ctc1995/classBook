/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 36rpx;
  box-sizing: border-box;
} 

.title{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.title .more{
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: unset;
  padding: 0 13rpx;
  border: 1px solid #999;
  border-radius: 20rpx;
}

/* 搜索 */
view.mod_search {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}

view.searchItem {
  display: flex;
  flex-direction: row;
  position: relative;
}

view.searchItem image {
  height: 30rpx;
  width: 30rpx;
  align-self: center;
  position: absolute;
  left: 18rpx;
}

view.searchItem input {
  width: 616rpx;
  flex: 1;
  padding-left: 62rpx;
  border-radius: 50rpx;
  border: 1px solid #dedede;
  background-color: #f5f5f5;
}