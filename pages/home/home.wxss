/**home.wxss**/
.userinfo {
  height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo button {
  width: 500rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}
.userinfo .ava{
    width: 194rpx;
    height: 194rpx;
    max-width: 194rpx;
    max-height: 194rpx;
    border-radius: 50%;
    border: 1px solid rgb(250,247,239);
    overflow: hidden;
    margin-bottom: 12rpx;
}
.userinfo .name{
  font-size: 32rpx;
  margin-bottom: 50rpx;
}
.userinfo .tips{
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #cbcbcb;
}
.userinfo .logo{
   font-size: 48rpx;
   margin-bottom: 20rpx;
   color: #f4b800;
}
.userinfo .slogan{
  font-size: 32rpx;
   margin-bottom: 50rpx;
}

/* 导航栏 */
.mod_navbar{
  width: 678rpx;
  font-size: 24rpx;
  color: #333;
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}
.mod_navbar .navbar_item{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.navbar_item image{
  width: 84rpx;
  height: 72rpx;
  margin-bottom: 15rpx;
}

/* 推荐书单 */
.mod_recommend .book_list{
  width: 678rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  margin-bottom: 60rpx;
}
.mod_recommend .book_item{
  width: 206rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.mod_recommend .book_item:nth-child(2n+2),.mod_recommend .book_item:nth-child(3n+3){
  margin-left: 30rpx;
}
.mod_recommend .book_item .book_pic{
  width: 206rpx;
  height:236rpx;
  max-width: 206rpx;
  max-height: 236rpx;
}
.mod_recommend .book_item .like{
  height: 32rpx;
  background-color: rgba(0,0,0,.7);
  font-size: 16rpx;
  padding-right: 8rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  position: absolute;
  left: 0;
  top: 188rpx;
  display: flex;
  align-items: center;
}
.mod_recommend .like.active{color: #f4b800;}
.mod_recommend .like image{
  width: 22rpx;
  height: 18rpx;
  margin-left: 8rpx;
  margin-right: 4rpx;
}
.mod_recommend .book_item .book_title{
  padding-top: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}