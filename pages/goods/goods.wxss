/* pages/goods/goods.wxss */
.page_goods{
  width: 750rpx;
  padding: 0 0 100rpx;
  box-sizing: border-box;
  overflow-x: hidden;
}
.page_goods .mod_good{
  margin-top: 50rpx;
}
.pic_title_price, .goods_detail, .good_action, .mod_good{
  padding: 0 30rpx;
  box-sizing: border-box;
}
swiper{
  height: 514rpx;
}
.mod_swiper{
  max-height: 514rpx;
  margin-bottom: 31rpx;
}
.swiper-item image{
  height: 514rpx;
  max-height: 514rpx;
}
.page_goods .line{
  margin-top: 30rpx;
  margin-left: 0;
}
.page_goods .pic_title_price .price{
	font-size: 30rpx;
	color: #999999;
  display: block;
}
.page_goods .pic_title_price .price span{
	font-size: 36rpx;
	line-height: 34rpx;
	color: #e50101;
}
.page_goods .pic_title_price .title{
	font-size: 30rpx;
	line-height: 34rpx;
	color: #333333;
  background-color: transparent;
}
.page_goods .goods_detail{
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.page_goods .goods_detail .detail_item{
  height: 80rpx;
  display: flex;
  align-items: center;
}
.page_goods .goods_detail .detail_item + .detail_item{
  border-top: 1px solid #eaeaea;
}
.page_goods .goods_detail .detail_item .unit{
  width: 150rpx;
  color: #555;
  display: inline-block;
}
.page_goods .goods_detail .detail_item .txt + .txt{
  margin-left: 10rpx;
}
.page_goods .goods_detail .detail_item .txt image{
  width: 24rpx;
  height: 24rpx;
}
.page_goods .good_action{
  display: flex;
  flex-direction: column;
  margin-top: -30rpx;
}
.page_goods .good_action .action{
  height: 82rpx;
  font-size: 30rpx;
  color: #555;
  display: flex;
  align-items: center;
}
.page_goods .good_action .action + .action{
  border-top: 1px solid #eaeaea;
}
.page_goods .good_action image{
	width: 22rpx;
	height: 30rpx;
	min-width: 22rpx;
	min-height: 30rpx;
}
.page_goods .good_action .address{
  min-width: 400rpx;
  margin: 0 20rpx;
}
.page_goods .line_title{
  width: 750rpx;
	height: 100rpx;
	background-color: #f3f3f3;
	font-size: 32rpx;
	line-height: 100rpx;
	color: #333333;
  padding: 0 30rpx;
  display: block;
}
.page_goods .goods_detail_image{
  width: 690rpx;
  margin-bottom: -30rpx;
}
.page_goods .goods_detail_image image{
  width: 750rpx;
}
.page_goods .goods_footer{
  width: 750rpx;
  height: 130rpx;
  font-size: 24rpx;
  background-color: #fff;
  border-top: 1px solid #eaeaea;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.goods_footer .click{
  flex: 1;
  color: #999;
  display: flex;
  justify-content: space-around;
}
.goods_footer .click p, .goods_footer .click .share{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.goods_footer .click .share{
  font-size: 24rpx;
  color: #999;
  background-color: transparent;
  line-height: 1.5;
  margin: 0;
}
.goods_footer .click .share::after{
  border: unset;
}
.goods_footer .click image{
  width: 26rpx;
  height: 26rpx;
  margin-bottom: 10rpx;
}
.goods_footer .button{
  flex: 1;
  display: flex;
  align-items: center;
}
.goods_footer .button button{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  margin: 0;
  border-radius: 0;
}
.goods_footer .button button::after{
  border: unset;
}
.goods_footer .button button.addCar{
  background-color: #999;
  color: #eee;
  border-top-left-radius: 60rpx;
  border-bottom-left-radius: 60rpx;
}
.goods_footer .button button.shop{
  background-color: #f4b800;
  color: #fff;
  border-top-right-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}