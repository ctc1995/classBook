/* pages/info/info.wxss */
.page_info{
  width: 750rpx;
  min-height: 100vh;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.page_info .weui-ava-img{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.page_info .weui-label{
  width: 120rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #999;
}
.page_info .weui-input, .page_info .weui-vcode-btn{
  font-size: 30rpx;
}
.page_info .weui-cell_select{
  padding: 32rpx;
}